<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/fon_24"
                android:layout_gravity="center"
                android:scaleType="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/profileImage"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_profile"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"/>

                <TextView
                    android:id="@+id/profileName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Иван"
                    android:textColor="@color/textBlack"
                    android:textSize="24sp"
                    android:layout_gravity="center"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center|bottom"
                    android:layout_marginTop="18dp"
                    android:weightSum="100">

                    <View
                        android:layout_width="@dimen/profile_separator"
                        android:layout_height="match_parent"
                        android:visibility="visible"
                        android:background="@color/separator"/>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_margin="@dimen/activity_horizontal_margin"
                        android:layout_weight="@dimen/profile_weight">

                        <TextView
                            android:id="@+id/profileCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3"
                            android:textColor="@color/textBlack"
                            android:textSize="@dimen/size_text_profile_large"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/textBlack"
                            android:textSize="@dimen/size_text_profile_midle"
                            android:text="События" />

                    </LinearLayout>

                    <View
                        android:layout_width="@dimen/profile_separator"
                        android:layout_height="match_parent"
                        android:visibility="visible"
                        android:background="@color/separator"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_margin="@dimen/activity_horizontal_margin"
                        android:layout_weight="@dimen/profile_weight">

                        <TextView
                            android:id="@+id/profileAge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/textBlack"
                            android:textSize="@dimen/size_text_profile_large"
                            android:text="19" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/textBlack"
                            android:textSize="@dimen/size_text_profile_midle"
                            android:text="Возраст" />

                    </LinearLayout>

                    <View
                        android:layout_width="@dimen/profile_separator"
                        android:layout_height="match_parent"
                        android:visibility="visible"
                        android:background="@color/separator"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_margin="@dimen/activity_horizontal_margin"
                        android:layout_weight="@dimen/profile_weight">

                        <TextView
                            android:id="@+id/profileCity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/textBlack"
                            android:textSize="@dimen/size_text_profile_large"
                            android:text="Москва" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Город"
                            android:textSize="@dimen/size_text_profile_midle"
                            android:textColor="@color/textBlack"/>

                    </LinearLayout>

                    <View
                        android:layout_width="@dimen/profile_separator"
                        android:layout_height="match_parent"
                        android:visibility="visible"
                        android:background="@color/separator"/>

                </LinearLayout>

            </LinearLayout>

        </FrameLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>